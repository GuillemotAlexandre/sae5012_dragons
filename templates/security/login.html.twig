{% extends 'base.html.twig' %}

{% block title %}Connexion - DragonCMS{% endblock %}

{% block body %}
<div class="flex items-center justify-center min-h-[calc(100vh-200px)]">
    <div class="w-full max-w-md bg-slate-800 p-8 rounded-lg shadow-2xl border border-slate-700">
        
        <div class="text-center mb-8">
            <h1 class="text-3xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-red-500 to-orange-500">
                Porte du Dragon
            </h1>
            <p class="text-slate-400 mt-2">Identifiez-vous pour accéder au savoir.</p>
        </div>

        {# Affichage des erreurs #}
        {% if error %}
            <div class="bg-red-500/10 border border-red-500 text-red-500 p-3 rounded mb-4 text-sm text-center">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form method="post" action="{{ path('app_login') }}">
            
            <div class="mb-6">
                <label for="email" class="block text-sm font-medium text-slate-300 mb-2">Email du Chasseur</label>
                <input type="email" value="{{ last_username }}" name="email" id="email" 
                       class="w-full px-4 py-2 bg-slate-900 border border-slate-600 rounded text-slate-200 focus:outline-none focus:ring-2 focus:ring-red-500 transition" 
                       required autofocus>
            </div>

            <div class="mb-8">
                <label for="password" class="block text-sm font-medium text-slate-300 mb-2">Mot de passe</label>
                <input type="password" name="password" id="password" 
                       class="w-full px-4 py-2 bg-slate-900 border border-slate-600 rounded text-slate-200 focus:outline-none focus:ring-2 focus:ring-red-500 transition" 
                       required>
            </div>

            {# Token CSRF (Sécurité obligatoire avec Symfony form_login) #}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit" 
                    class="w-full bg-gradient-to-r from-red-600 to-red-800 hover:from-red-500 hover:to-red-700 text-white font-bold py-3 px-4 rounded transition duration-300 shadow-lg transform hover:-translate-y-1">
                Ouvrir la Porte
            </button>
        </form>

        <div class="mt-6 text-center text-sm text-slate-500">
            Pas encore de compte ? 
            <a href="{{ path('app_register') }}" class="text-red-400 hover:text-red-300 font-bold transition">Rejoindre la guilde</a>
        </div>
    </div>
</div>
{% endblock %}