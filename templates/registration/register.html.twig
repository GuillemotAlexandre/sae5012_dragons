{% extends 'base.html.twig' %}

{% block title %}Inscription - La Guilde des Dragons{% endblock %}

{% block body %}
<div class="flex items-center justify-center min-h-[calc(100vh-200px)] py-10">
    <div class="w-full max-w-lg bg-slate-800 p-8 rounded-lg shadow-2xl border border-slate-700 relative overflow-hidden">
        
        {# Petit effet décoratif en fond #}
        <div class="absolute top-0 right-0 -mr-16 -mt-16 w-32 h-32 bg-red-600 rounded-full opacity-10 blur-xl"></div>

        <div class="text-center mb-8 relative z-10">
            <h1 class="text-3xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-orange-400 to-red-600">
                Rejoindre la Guilde
            </h1>
            <p class="text-slate-400 mt-2">Prêtez serment et accédez aux archives secrètes.</p>
        </div>

        {# Formulaire visuel (non fonctionnel pour l'instant) #}
        <form method="post" class="relative z-10">
            
            {# Champ Pseudo #}
            <div class="mb-5">
                <label for="username" class="block text-sm font-medium text-slate-300 mb-2">Nom de code (Pseudo)</label>
                <input type="text" name="username" id="username" 
                       class="w-full px-4 py-2 bg-slate-900 border border-slate-600 rounded text-slate-200 focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition" 
                       placeholder="ChevalierNoir42" required>
            </div>

            {# Champ Email #}
            <div class="mb-5">
                <label for="email" class="block text-sm font-medium text-slate-300 mb-2">Email de contact</label>
                <input type="email" name="email" id="email" 
                       class="w-full px-4 py-2 bg-slate-900 border border-slate-600 rounded text-slate-200 focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition" 
                       placeholder="vous@exemple.com" required>
            </div>

            {# Champ Mot de passe #}
            <div class="mb-5">
                <label for="plainPassword" class="block text-sm font-medium text-slate-300 mb-2">Mot de passe</label>
                <input type="password" name="plainPassword" id="plainPassword" 
                       class="w-full px-4 py-2 bg-slate-900 border border-slate-600 rounded text-slate-200 focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition" 
                       required>
                <p class="text-xs text-slate-500 mt-1">Au moins 6 caractères.</p>
            </div>

            {# Checkbox CGU (Condition du brief sur les données) #}
            <div class="flex items-start mb-6">
                <div class="flex items-center h-5">
                    <input id="agreeTerms" name="agreeTerms" type="checkbox" 
                           class="w-4 h-4 border border-slate-600 rounded bg-slate-900 focus:ring-3 focus:ring-red-500 ring-offset-slate-800" required>
                </div>
                <label for="agreeTerms" class="ml-2 text-sm font-medium text-slate-400">
                    J'accepte de partager mes découvertes sur les dragons (CGU).
                </label>
            </div>

            <button type="submit" 
                    class="w-full bg-gradient-to-r from-orange-600 to-red-700 hover:from-orange-500 hover:to-red-600 text-white font-bold py-3 px-4 rounded transition duration-300 shadow-lg transform hover:-translate-y-1">
                Graver mon nom
            </button>
        </form>

        <div class="mt-6 text-center text-sm text-slate-500">
            Déjà initié ? 
            <a href="{{ path('app_login') }}" class="text-red-400 hover:text-red-300 font-bold transition">Connexion</a>
        </div>
    </div>
</div>
{% endblock %}